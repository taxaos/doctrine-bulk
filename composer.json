{
    "name": "taxaos/doctrine-bulk",
    "description": "Simple classes that allows bulk operations on doctrine entities (only mySQL upsert supported)",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": ".avolver",
            "email": "avolver@gmail.com"
        },
        {
            "name": ".fry",
            "email": "fry@6dreams.net"
        }
    ],
    "require": {
        "php": ">=8.0",
        "doctrine/orm": "^2.5|^3",
        "ext-pdo": "*",
        "doctrine/annotations": "^1.13.2",
        "symfony/cache": "^5|^6|^7"
    },
    "autoload": {
        "psr-4": {
            "DoctrineBulk\\": "src/DoctrineBulk",
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": [
            "phpunit -c phpunit.build.xml --testdox --colors=always"
        ],
        "stan": [
            "vendor/bin/phpstan analyse src tests --level 8"
        ],
        "phpcs": [
            "vendor/bin/phpcs --standard=PSR12 src tests"
        ],
        "phpcs-fix": [
            "vendor/bin/phpcbf --standard=PSR12 src tests"
        ]
    },
    "minimum-stability": "stable",
    "require-dev": {
        "phpunit/phpunit": ">8.5.30",
        "phpstan/phpstan": "^1.9",
        "squizlabs/php_codesniffer": "^3.7"
    }
}
